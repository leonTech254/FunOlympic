<header>
    <link rel="stylesheet" href="css/style.css">
</header>
<div class="header_section">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="logo"><a href="index.html"><img src="images/logo.png"></a></div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @foreach (var item in navBarModel)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@item.navLink">@item.navName</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
</div>

@code {
    public class NavBarModel
    {
        public string navName { get; set; }
        public string navLink { get; set; }
    }

    public List<NavBarModel> navBarModel;

    protected override void OnInitialized()
    {
        navBarModel = new List<NavBarModel>()
        {
            new NavBarModel() { navName = "HOME", navLink = "/" },
            new NavBarModel() { navName = "ABOUT US", navLink = "/about-us" },
            new NavBarModel() { navName = "EVENTS", navLink = "/events" },
            new NavBarModel() { navName = "CONTACTS", navLink = "/contacts" },
            new NavBarModel() { navName = "ACCOUNT", navLink = "/profile" }
        };
    }
}
